import random
N = random.randrange(1,15)
print("N = ",N)
L = [random.randint(1, 7) for i in range(N)]
print(L)
_max = max(L)
print("Максимум: ", _max)
_min = min(L)
print("Минимум: ", _min)
for i in range(N):
    if L[i] == _max or L[i] == _min:
        break
print("Индекс первого экстремума: ", i)
